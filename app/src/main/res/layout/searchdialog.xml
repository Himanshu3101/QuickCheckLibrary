<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transparent_round_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_searchmandate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundmain"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/search_record"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_light"
                android:gravity="left"
                android:text="@string/to_date"
                android:textColor="@color/textcolor"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_light"
                android:gravity="left"
                android:text="@string/from_date"
                android:textColor="@color/textcolor"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_searchfromdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".5"
                android:background="@drawable/edittextrounded"
                android:fontFamily="@font/opensans_light"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@color/textcolor"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_searchtodate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".5"
                android:background="@drawable/edittextrounded"
                android:fontFamily="@font/opensans_light"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@color/textcolor"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="OR"
            android:textColor="@color/textcolor"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edt_searchreference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight=".5"
            android:background="@drawable/edittextrounded"
            android:fontFamily="@font/opensans_light"
            android:gravity="left"
            android:hint="Reference"
            android:padding="6dp"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/textcolor"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_searchmandate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_ripple_effect"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="8dp"
            android:text="Search"
            android:textColor="@color/backgroundmain"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>